<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        tools:context=".fragments.MultiChoiceFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:padding="5dp"
        app:columnCount="2"
        app:rowCount="6">

    <RelativeLayout
            android:background="@drawable/dark_card"
            android:layout_margin="5dp"
            android:layout_height="90sp"
            app:layout_row="0"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">
        <TextView
                android:id="@+id/txtContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="65sp"
                android:text="ã‚"/>
    </RelativeLayout>

    <Button
            android:id="@+id/btnChoice1"
            android:text="Choice 1"
            android:background="@drawable/darkish_card"
            android:layout_margin="5dp"
            app:layout_row="1"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"/>

    <Button
            android:id="@+id/btnChoice2"
            android:text="Choice 2"
            android:background="@drawable/darkish_card"
            android:layout_margin="5dp"
            app:layout_row="2"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"/>

    <Button
            android:id="@+id/btnChoice3"
            android:text="Choice 3"
            android:background="@drawable/darkish_card"
            android:layout_margin="5dp"
            app:layout_row="3"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"/>

    <Button
            android:id="@+id/btnChoice4"
            android:text="Choice 4"
            android:background="@drawable/darkish_card"
            android:layout_margin="5dp"
            app:layout_row="4"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"/>

    <RelativeLayout
            android:background="@drawable/dark_card"
            android:layout_margin="5dp"
            android:layout_height="32sp"
            app:layout_row="5"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">
        <TextView
                android:id="@+id/progressCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:text="0/0"/>
    </RelativeLayout>

    <RelativeLayout
            android:background="@drawable/dark_card"
            android:layout_margin="5dp"
            android:layout_height="32sp"
            app:layout_row="5"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">
        <TextView
                android:id="@+id/progressPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:text="100%"/>
    </RelativeLayout>
</androidx.gridlayout.widget.GridLayout>